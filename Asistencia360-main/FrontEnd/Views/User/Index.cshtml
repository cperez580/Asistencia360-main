@model IEnumerable<FrontEnd.Models.UserModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $("#tableOpen8").DataTable({

            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once

            "ajax": {
                "url": "/User/LoadData",
                "type": "POST",
                "datatype": "json"
            },

            "columns": [
                { "data": "name", "name": "Nombre", "autoWidth": true },
                { "data": "last_name", "name": "Apellidos", "autoWidth": true },
                { "data": "id_number", "name": "Cédula", "autoWidth": true },
                { "data": "email", "name": "Correo", "autoWidth": true },
                { "data": "company_id", "name": "Empresa", "autoWidth": true },
                { "data": "department_id", "name": "Departamento", "autoWidth": true },
                { "data": "role_id", "name": "Rol", "autoWidth": true },
                {
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-primary" href="/User/Edit/' + full.user_id + '">Editar</a>'
                            + '<a class="btn btn-primary mx-4" href = "/User/Delete/' + full.user_id + '" > Eliminar</a>';
                    }
                }
            ]
        });
    });
</script>


<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h3 class="mb-0">Listado de Usuarios</h3>
            <a class="btn btn-primary" href=@Url.Action("Create", "User")>
