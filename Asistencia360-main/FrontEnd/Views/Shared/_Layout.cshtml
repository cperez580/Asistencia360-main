<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>DarkPanTickets</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="img/favicon.ico" rel="icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/WebStyles/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/WebStyles/css/style.css" rel="stylesheet" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/WebStyles/js/site.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
@RenderSection("scripts", false)
<body>

    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a href=@Url.Action("Index", "Home") class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">Asistencia360</h3>
                </a>

                <div class="navbar-nav w-100">
                    <a href=@Url.Action("Index", "Dashboard") class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Dashboard</a>
                    <a href=@Url.Action("Index", "Ticket") class="nav-item nav-link"><i class="fa fa-ticket-alt me-2"></i>Tiquetes</a>
                    <a href=@Url.Action("Index", "Service") class="nav-item nav-link"><i class="fa fa-desktop me-2"></i>Servicios</a>
                    <a href=@Url.Action("Index", "Inventory") class="nav-item nav-link"><i class="fa fa-boxes me-2"></i>Inventario</a>
                    <a href=@Url.Action("Index", "FAQ") class="nav-item nav-link"><i class="fa fa-question-circle me-2"></i>FAQ</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Catálogos</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href=@Url.Action("Index", "Company") class="dropdown-item">Empresas</a>
                            <a href=@Url.Action("Index", "Department") class="dropdown-item">Departamentos</a>
                            <a href=@Url.Action("Index", "InternalService") class="dropdown-item">Servicios Internos</a>
                            <a href=@Url.Action("Index", "HardDrive") class="dropdown-item">Discos Duros</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-lock me-2"></i>Seguridad</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href=@Url.Action("Index", "User") class="dropdown-item">Usuarios</a>
                            <a href=@Url.Action("Index", "Role") class="dropdown-item ">Roles</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->

        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Notificaciones</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Profile updated</h6>
                                <small>15 minutes ago</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">New user added</h6>
                                <small>15 minutes ago</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Password changed</h6>
                                <small>15 minutes ago</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item text-center">See all notifications</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            @*<img class="rounded-circle me-lg-2" src="~/WebStyles/img/user.jpg" alt="" style="width: 40px; height: 40px;">*@
                            <span class="d-none d-lg-inline-flex">
                                @*@if (Session["userName"] != null)
                                {
                                    @Session["userName"].ToString()
                                }*@
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">Mi perfil</a>
                            <a href="#" class="dropdown-item">Configuracion</a>
                            <a href=@Url.Action("Logout", "User") class="dropdown-item">Salir</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <!-- Blank Start -->
            @RenderBody()
            <!-- Blank End -->
            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href=@Url.Action("Index", "Home")>Services365</a>, All Right Reserved.
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script type="text/javascript">
        var baseUrl = "@Url.Content("~/")";
    </script>
    <script src="~/WebStyles/lib/chart/chart.min.js"></script>
    <script src="~/WebStyles/lib/easing/easing.min.js"></script>
    <script src="~/WebStyles/lib/waypoints/waypoints.min.js"></script>
    <script src="~/WebStyles/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/WebStyles/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/WebStyles/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/WebStyles/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/WebStyles/js/main.js"></script>
</body>

</html>