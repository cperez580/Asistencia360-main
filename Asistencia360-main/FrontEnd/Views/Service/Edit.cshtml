@model FrontEnd.Models.ServiceViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h3 class="mb-0">Editar Servicio</h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @Html.HiddenFor(model=>model.ServiceId)
                    @Html.HiddenFor(model=>model.Active)

                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdminId" class="control-label"></label>
                        @*<input asp-for="admin_id" class="form-control" />*@
                        @Html.DropDownListFor(model=>model.AdminId, new SelectList(Model.Users, "UserId", "Name"), "-- Seleccione un Usuario --", new { @class = "form-select" })
                        <span asp-validation-for="AdminId" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        @*<input asp-for="type" class="form-control" />*@
                        @Html.DropDownListFor(model=>model.Type, new List<SelectListItem>
                        {
                            new SelectListItem {Text = "Incidente", Value = "Incidente"},
                            new SelectListItem {Text = "Problema", Value = "Problema"},
                            new SelectListItem {Text = "Solicitud", Value = "Solicitud"}
                        }, "-- Seleccione un Tipo --", new { @class = "form-select" })
                        <span asp-validation-for="Type" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Priority" class="control-label"></label>
                        @*<input asp-for="priority" class="form-control" />*@
                        @Html.DropDownListFor(model=>model.Priority, new List<SelectListItem>
                        {
                            new SelectListItem {Text = "Alto", Value = "Alto"},
                            new SelectListItem {Text = "Medio", Value = "Medio"},
                            new SelectListItem {Text = "Bajo", Value = "Bajo"}
                        }, "-- Seleccione un Tipo --", new { @class = "form-select" })
                        <span asp-validation-for="Priority" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ServiceSchedule" class="control-label"></label>
                        <input asp-for="ServiceSchedule" class="form-control" />
                        <span asp-validation-for="ServiceSchedule" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupportSchedule" class="control-label"></label>
                        <input asp-for="SupportSchedule" class="form-control" />
                        <span asp-validation-for="SupportSchedule" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlaOpen" class="control-label"></label>
                        <input asp-for="SlaOpen" class="form-control" />
                        <span asp-validation-for="SlaOpen" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlaClose" class="control-label"></label>
                        <input asp-for="SlaClose" class="form-control" />
                        <span asp-validation-for="SlaClose" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OlaOpen" class="control-label"></label>
                        <input asp-for="OlaOpen" class="form-control" />
                        <span asp-validation-for="OlaOpen" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OlaClose" class="control-label"></label>
                        <input asp-for="OlaClose" class="form-control" />
                        <span asp-validation-for="OlaClose" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>